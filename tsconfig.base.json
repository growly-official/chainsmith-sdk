{
  "compilerOptions": {
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2015"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true
  }
}
