{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "noEmit": true,
    "baseUrl": ".",
    "emitDeclarationOnly": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
      "@adapters/*": ["./adapters/*"],
      "@data/*": ["./data/*"],
      "@chaintypes/*": ["./types/*"],
      "@plugins/*": ["./plugins/*"],
      "@rpc/*": ["./rpc/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["**/node_modules", "**/dist"]
}
